<%= form_for(@venue) do |f| %>
  <% if @venue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@venue.errors.count, "error") %> prohibited this venue from being saved:</h2>

      <ul>
      <% @venue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :street %><br />
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
    <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website, :value => "HTTP://WWW." %>
  </div>
  <div class="field">
    <%= f.label :guest_minimum %><br />
    <%= f.select(:min, [['60-80'],
                          ['80-100'],
                          ['100-120'],
                          ['120-140'],
                          ['140+']],                            
                          { :multiple => true, :size => 5 }) %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.select(:price, [['$60-$80'],
                          ['$80-$100'],
                          ['$100-$120'],
                          ['$120-$140'],
                          ['$140+']],                            
                          { :multiple => true, :size => 5 }) %>
  </div>
  <div class="field">
    <%= f.label :extra_charges %><br />
    <%= f.select(:extra_charges, [['TAX'],
                                  ['GRATUITY'],
                                  ['TAX & GRATUITY'],
                                  ['FLAT RATE']],
                                  { :multiple => true, :size => 4 }) %>

  </div>
  <div class="field">
    <%= f.label :upload_image %><br />
    <%= f.file_field :image %>
  </div>
<br />
  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>
